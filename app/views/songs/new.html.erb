<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <%= f.label :genre_id %>
  <%= f.collection_select :genre_id, Genre.all, :id, :name%>
  <br />

  <h2>Notes</h2>
  <%= f.fields_for :notes do |note_field| %>
  <%= note_field.label :content %>
  <%= note_field.text_area :content %>
  <% end %>

  <%= f.submit %>
<% end %>


